{
  "name": "streamlit-app",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "customizations": {
    "codespaces": {
      "openFiles": ["README.md", "app.py"]
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        // Point Pylance & the Python extension to the venv we create
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.analysis.diagnosticMode": "workspace",
        "python.analysis.extraPaths": ["${workspaceFolder}"]
      }
    }
  },

  // Create a project-local venv and install deps from requirements.txt
  "postCreateCommand": "python -m venv .venv && bash -lc 'source .venv/bin/activate && pip install -U pip && pip install -r requirements.txt'",

  // Start Streamlit using the venv
  "postAttachCommand": "bash -lc 'source .venv/bin/activate && streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false --server.port 8501'",

  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  }
}
